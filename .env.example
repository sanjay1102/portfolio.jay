PORT=8787
NODE_ENV=development
ALLOWED_ORIGINS=http://localhost:8000,https://your-frontend-domain.com
SESSION_SECRET=replace-with-long-random-secret

# Admin login: use hash (recommended) or plain password fallback
# Format: scrypt$<salt_base64>$<hash_base64>
ADMIN_PASSWORD_HASH=scrypt$replace_salt_base64$replace_hash_base64
# ADMIN_PASSWORD=change-me

# Choose: smtp or brevo
EMAIL_PROVIDER=brevo

# SMTP mode (EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your_mail@gmail.com
SMTP_PASS=your_smtp_password_or_app_password

# Brevo API mode (EMAIL_PROVIDER=brevo)
BREVO_API_KEY=replace-with-your-brevo-api-key

FROM_NAME=Sanjay Sathiyanathan
FROM_EMAIL=your_mail@gmail.com
RESUME_FILE_PATH=/absolute/path/to/Resume.pdf
